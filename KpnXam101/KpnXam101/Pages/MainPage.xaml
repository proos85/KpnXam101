<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:system="clr-namespace:System;assembly=netstandard"
             x:Class="KpnXam101.Pages.MainPage">

    <StackLayout VerticalOptions="Center"
                 Margin="10">

        <Entry x:Name="Getal1"
               Placeholder="Getal 1"
               PlaceholderColor="Accent"
               Keyboard="Numeric">
            <Entry.Triggers>
                <Trigger TargetType="Entry"
                         Property="IsFocused" 
                         Value="True">
                    <Setter Property="BackgroundColor"
                            Value="Yellow"/>
                </Trigger>
            </Entry.Triggers>
        </Entry>

        <Entry x:Name="Getal2"
               Placeholder="Getal 2"
               PlaceholderColor="Accent"
               Keyboard="Numeric">
            <Entry.Triggers>
                <Trigger TargetType="Entry"
                         Property="IsFocused" 
                         Value="True">
                    <Setter Property="BackgroundColor"
                            Value="Yellow"/>
                </Trigger>
            </Entry.Triggers>
        </Entry>

        <Picker x:Name="Picker"
                Title="Actie"/>

        <Button Text="Reken uit"
                Clicked="Button_OnClicked"/>

    </StackLayout>

</ContentPage>
